{
  "name": "php-weather/core",
  "type": "library",
  "description": "Weather development library",
  "homepage": "https://github.com/php-weather",
  "license": "MIT",
  "authors": [
    {
      "name": "Dominik Schwind",
      "email": "dschwind@lostfocus.de",
      "homepage": "https://lostfocus.de",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8",
    "ext-json": "*"
  },
  "require-dev": {
    "jetbrains/phpstorm-attributes": "^1.0",
    "php-http/guzzle7-adapter": "dev-master",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "phpstan/phpstan": "^1.6",
    "phpunit/phpunit": ">=8.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "PhpWeather\\": "Src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhpWeather\\Tests\\": "Tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse --level=8 Src/"
  },
  "config": {
    "lock": false,
    "sort-packages": true
  }
}
